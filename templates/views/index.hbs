{{> header}}
</head>

<body>
  {{> nav}}
  <main>
    <h1>Welcome to {{ pageTitle }}</h1>
    <p>Use this site to get your weather!</p>

    <form action="/weather" method="POST">
      <input type="text" name="address" placeholder="Location" />
      <button>Search</button>
    </form>

    <p class="displayDataTop"></p>
    <p class="displayDataBottom"></p>

    <div>
      <button id="toggleBtn">Hide Image</button>
      <button id="shuffleBtn">Shuffle Image</button>
    </div>
    <div class="imageDiv">
      <img class="image" src="https://source.unsplash.com/400x300/?weather" alt="Weather Image" width="400px"
        height="300px" />
    </div>
  </main>

  <script src="/js/image.js"></script>
  <script src="/js/app.js"></script>
  {{> footer}}